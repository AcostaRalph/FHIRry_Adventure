<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kamuela94.fhirry_adventure.LoginActivity"
    android:weightSum="1">

    <!-- Login progress -->
    <TextView
        android:id="@+id/passcodeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/passcode_prompt"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Title"
        android:textSize="30sp"
        android:layout_marginTop="36dp"
        tools:text="Enter Passcode" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.kamuela94.fhirry_adventure.LoginActivity">

        <ImageView
            android:id="@+id/pinView1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/pinview_margin"
            android:layout_marginRight="@dimen/pinview_margin"
            app:srcCompat="@drawable/pincode_empty" />

        <ImageView
            android:id="@+id/pinView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/pinview_margin"
            android:layout_marginRight="@dimen/pinview_margin"
            app:srcCompat="@drawable/pincode_empty" />

        <ImageView
            android:id="@+id/pinView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/pinview_margin"
            android:layout_marginRight="@dimen/pinview_margin"
            app:srcCompat="@drawable/pincode_empty" />

        <ImageView
            android:id="@+id/pinView4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/pinview_margin"
            android:layout_marginRight="@dimen/pinview_margin"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/pincode_empty" />

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="209dp"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal">

        <Button android:onClick="hitButton"
                android:text="1"
                android:tag="1"/>

        <Button android:onClick="hitButton"
                android:text="2"
                android:tag="2"/>

        <Button android:onClick="hitButton"
                android:text="3"
                android:tag="3"/>

        <Button android:onClick="hitButton"
                android:text="4"
                android:tag="4"/>

        <Button android:onClick="hitButton"
                android:text="5"
                android:tag="5"/>

        <Button android:onClick="hitButton"
                android:text="6"
                android:tag="6"/>

        <Button android:onClick="hitButton"
                android:text="7"
                android:tag="7"/>

        <Button android:onClick="hitButton"
                android:text="8"
                android:tag="8"/>

        <Button android:onClick="hitButton"
                android:text="9"
                android:tag="9"/>

        <Button android:onClick="hitButton"
                android:id="@+id/button"
                android:layout_column="1"
                android:layout_row="3"
                android:text="0"
                android:tag="0"/>
    </GridLayout>
</LinearLayout>
